{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "bun",
    "analytics": false
  },
  "newProjectRoot": "projects",
  "projects": {
    "zero-angular": {
      "projectType": "library",
      "root": "projects/zero-angular",
      "sourceRoot": "projects/zero-angular/src",
      "prefix": "zero",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "projects/zero-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/zero-angular/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/zero-angular/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "./builders:vitest",
          "options": {
            "tsConfig": "projects/zero-angular/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "./builders:lint",
          "options": {
            "exclude": ["node_modules", "dist"]
          }
        },
        "check": {
          "builder": "./builders:tsgo",
          "options": {
            "tsConfig": "projects/zero-angular/tsconfig.lib.json",
            "noEmit": true
          }
        }
      }
    }
  }
}
