{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "TypeScript (tsc) Builder",
  "description": "Typechecks TypeScript using tsc",
  "type": "object",
  "properties": {
    "tsConfig": {
      "type": "string",
      "description": "The TypeScript configuration file to use"
    },
    "noEmit": {
      "type": "boolean",
      "description": "Do not emit the output files",
      "default": false
    },
    "declaration": {
      "type": "boolean",
      "description": "Generate declaration files",
      "default": true
    },
    "declarationMap": {
      "type": "boolean",
      "description": "Generate sourcemaps for d.ts",
      "default": false
    }
  }
}
