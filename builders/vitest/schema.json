{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Vitest Builder",
  "description": "Runs unit tests with Vitest",
  "type": "object",
  "properties": {
    "config": {
      "type": "string",
      "description": "Path to vitest config",
      "default": "vitest.config.ts"
    },
    "watch": {
      "type": "boolean",
      "description": "Run vitest in watch mode",
      "default": false
    }
  }
}
